<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_guest_tree" model="ir.ui.view">
            <field name="name">vit_guest_tree</field>
            <field name="model">vit.guest</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Guest">
                    <field name="name" /> <!-- 100-->
                    <field name="email" /> <!-- 101-->
                    <field name="identification_number" /> <!-- 102-->
                    <field name="phone" /> <!-- 103-->
                    <field name="company" /> <!-- 104-->
                    <field name="photo" /> <!-- 105-->
                    <field name="is_blacklisted" /> <!-- 106-->
                    <field name="registration_date" /> <!-- 107-->
                    <field name="last_visit_date" /> <!-- 108-->
                    <field name="total_visits" /> <!-- 109-->
                    <field name="active" /> <!-- 110-->
                </list>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_guest_form" model="ir.ui.view">
            <field name="name">vit_guest_form</field>
            <field name="model">vit.guest</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Guest">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Guest Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="email"  />
                                <field name="identification_number"  />
                                <field name="phone"  />
                                <field name="company"  />
                                <field name="photo"  />
                                <field name="is_blacklisted"  />
                                <field name="registration_date"  />
                                <field name="last_visit_date"  />
                                <field name="total_visits"  />
                                <field name="active"  />
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_guest_search" model="ir.ui.view">
            <field name="name">vit_guest</field>
            <field name="model">vit.guest</field>
            <field name="arch" type="xml">
                <search string="Guest">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Email" name="filter_by_email" domain="[('email','=','')]" />
                    <filter string="Identification Number" name="filter_by_identification_number" domain="[('identification_number','=','')]" />
                    <filter string="Phone" name="filter_by_phone" domain="[('phone','=','')]" />
                    <filter string="Company" name="filter_by_company" domain="[('company','=','')]" />
                    <filter string="Photo" name="filter_by_photo" domain="[('photo','=','')]" />
                    <filter string="Is Blacklisted" name="filter_by_is_blacklisted" domain="[('is_blacklisted','=','')]" />
                    <filter string="Registration Date" name="filter_by_registration_date" domain="[('registration_date','=','')]" />
                    <filter string="Last Visit Date" name="filter_by_last_visit_date" domain="[('last_visit_date','=','')]" />
                    <filter string="Total Visits" name="filter_by_total_visits" domain="[('total_visits','=','')]" />
                    <filter string="Active" name="filter_by_active" domain="[('active','=','')]" />
                    <field name="name" select="True"/>
                    <field name="email" select="True"/>
                    <field name="identification_number" select="True"/>
                    <field name="phone" select="True"/>
                    <field name="company" select="True"/>
                    <field name="photo" select="True"/>
                    <field name="is_blacklisted" select="True"/>
                    <field name="registration_date" select="True"/>
                    <field name="last_visit_date" select="True"/>
                    <field name="total_visits" select="True"/>
                    <field name="active" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_guest_kanban" model="ir.ui.view" >
            <field name="name">vit_guest</field>
            <field name="model">vit.guest</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <span class="text-muted">Last Visit Date</span> <field name="last_visit_date"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_guest_cal" model="ir.ui.view">
            <field name="name">vit_guest_cal</field>
            <field name="model">vit.guest</field>
            <field name="arch" type="xml">
                <calendar string="Guest" date_start="last_visit_date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- action window -->
        <record id="action_guest" model="ir.actions.act_window">
            <field name="name">Guest</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.guest</field>
            <field name="view_mode">list,form,kanban,pivot,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Guest
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_guest" name="Guest" parent="vit_guest_config_menu" action="action_guest" sequence="20"/>
    </data>
</odoo>