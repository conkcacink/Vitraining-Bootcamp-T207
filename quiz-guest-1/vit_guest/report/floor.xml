<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_floor" model="ir.actions.report">
            <field name="name">Floor</field>
            <field name="model">vit.floor</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_guest.vit_floor_report</field>
            <field name="report_file">vit_guest.vit_floor_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_guest.model_vit_floor"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_guest.vit_floor_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Floor: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Floor Number</strong>
                            <p class="m-0" t-field="doc.floor_number" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Is Accessible</strong>
                            <p class="m-0" t-field="doc.is_accessible" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Security Level</strong>
                            <p class="m-0" t-field="doc.security_level" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Active</strong>
                            <p class="m-0" t-field="doc.active" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Tenant</h2>
                <table class="table table-sm o_main_table" name="tenant_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Contact Person</td>
                            <td>Contact Email</td>
                            <td>Contact Phone</td>
                            <td>Office Number</td>
                            <td>Business Hours Start</td>
                            <td>Business Hours End</td>
                            <td>Is Accessible</td>
                            <td>Requires Approval</td>
                            <td>Active</td>
                            <td>Floor</td>
                        </tr>
                    </thead>
                    <tbody class="tenant_ids_tbody">
                        <tr t-foreach="doc.tenant_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.contact_person" /></td>
                            <td><span t-field="line.contact_email" /></td>
                            <td><span t-field="line.contact_phone" /></td>
                            <td><span t-field="line.office_number" /></td>
                            <td><span t-field="line.business_hours_start" /></td>
                            <td><span t-field="line.business_hours_end" /></td>
                            <td><span t-field="line.is_accessible" /></td>
                            <td><span t-field="line.requires_approval" /></td>
                            <td><span t-field="line.active" /></td>
                            <td><span t-field="line.floor_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_guest.vit_floor_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_guest.vit_floor_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>