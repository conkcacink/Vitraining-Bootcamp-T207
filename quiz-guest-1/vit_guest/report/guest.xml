<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_guest" model="ir.actions.report">
            <field name="name">Guest</field>
            <field name="model">vit.guest</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_guest.vit_guest_report</field>
            <field name="report_file">vit_guest.vit_guest_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_guest.model_vit_guest"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_guest.vit_guest_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Guest: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Email</strong>
                            <p class="m-0" t-field="doc.email" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Identification Number</strong>
                            <p class="m-0" t-field="doc.identification_number" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Phone</strong>
                            <p class="m-0" t-field="doc.phone" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Company</strong>
                            <p class="m-0" t-field="doc.company" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Photo</strong>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Is Blacklisted</strong>
                            <p class="m-0" t-field="doc.is_blacklisted" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Registration Date</strong>
                            <p class="m-0" t-field="doc.registration_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Last Visit Date</strong>
                            <p class="m-0" t-field="doc.last_visit_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Total Visits</strong>
                            <p class="m-0" t-field="doc.total_visits" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Active</strong>
                            <p class="m-0" t-field="doc.active" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_guest.vit_guest_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_guest.vit_guest_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>