<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_barcode" model="ir.actions.report">
            <field name="name">Barcode</field>
            <field name="model">vit.barcode</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_guest.vit_barcode_report</field>
            <field name="report_file">vit_guest.vit_barcode_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_guest.model_vit_barcode"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_guest.vit_barcode_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Barcode: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Barcode Value</strong>
                            <p class="m-0" t-field="doc.barcode_value" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Generated Date</strong>
                            <p class="m-0" t-field="doc.generated_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Expiry Date</strong>
                            <p class="m-0" t-field="doc.expiry_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Active</strong>
                            <p class="m-0" t-field="doc.active" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Entry Scanned</strong>
                            <p class="m-0" t-field="doc.entry_scanned" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Exit Scanned</strong>
                            <p class="m-0" t-field="doc.exit_scanned" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Entry Scan Time</strong>
                            <p class="m-0" t-field="doc.entry_scan_time" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Exit Scan Time</strong>
                            <p class="m-0" t-field="doc.exit_scan_time" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Scanner Location</strong>
                            <p class="m-0" t-field="doc.scanner_location" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Visit</strong>
                            <p class="m-0" t-field="doc.visit_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_guest.vit_barcode_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_guest.vit_barcode_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>